{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "off",
    "no-console": "off",
    "no-global-assign": "off"
  },
  "globals": {
    "apiCall": "readonly",
    "showNotification": "readonly",
    "confirmAction": "readonly",
    "formatCurrency": "readonly",
    "bootstrap": "readonly"
  }
}